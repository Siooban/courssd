<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.WelcomeController">
    <center>
        <GridPane alignment="center" hgap="10" vgap="10">
            <children>
                <Button mnemonicParsing="false" prefHeight="80.0" prefWidth="150.0" text="Calibration Mode" />
                <Button fx:id="testModeButton" mnemonicParsing="false" onAction="#test" prefHeight="80.0" prefWidth="150.0" text="Test Mode" GridPane.rowIndex="1" />
                <Button fx:id="configurationButton" mnemonicParsing="false" onAction="#configuration" prefHeight="80.0" prefWidth="150.0" text="Configuration" GridPane.rowIndex="2" />
                <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#logout" prefHeight="80.0" prefWidth="150.0" text="Log Off" GridPane.rowIndex="3" />
            </children>
            <columnConstraints>
                <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>
        </GridPane>
    </center>
    <top>
        <GridPane BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label fx:id="machineNameLabel" text="&lt;Machine Name&gt;" />
                <Label fx:id="loggedUserLabel" text="&lt;Logged User&gt;" GridPane.columnIndex="1" />
            </children>
        </GridPane>
    </top>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <bottom>
        <GridPane BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label fx:id ="softwareVersionLabel" text="&lt;Software Version&gt;" />
                <Label fx:id="dateTimeLabel" text="&lt;Date + Time&gt;" GridPane.columnIndex="1" />
            </children>
        </GridPane>
    </bottom>
</BorderPane>

